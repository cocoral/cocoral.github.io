        <div class=" rellax cube-b cube__primary cube-xl" data-rellax-speed="7" style="transform: rotate(45deg);"></div>
      </div>
      <div class="mid-ground visual">
        <div class="rellax cube-c cube__tertiary cube-lg" data-rellax-speed="4" style="transform: rotate(45deg);"></div>
        <div class="rellax cube-d cube__tertiary cube-lg" data-rellax-speed="4" style="transform: rotate(45deg);"></div>
        <div class="rellax cube-e cube__secondary cube-lg" data-rellax-speed="4" style="transform: rotate(45deg);"></div>
      </div>
      <div class="back-ground visual">
        <div class="cube-f cube__secondary cube-md"></div>

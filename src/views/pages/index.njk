  		<div class="card-three-row">
  			<div class="card">
          <svg class="svg-icon">
            <use xlink:href="#icon-strategy"></use>
          </svg>
  				<p>Map ideas into intuitive digital form</p>
  			</div>
  			<div class="card">
          <svg class="svg-icon">
            <use xlink:href="#icon-code"></use>
          </svg>
  				<p>Code design components into products in browser</p>
  			</div>
  			<div class="card">
          <svg class="svg-icon">
            <use xlink:href="#icon-idea"></use>
          </svg>
  				<p>Inspire ideas</p>
  			</div>
  		</div>
  	</div>
  </section>
